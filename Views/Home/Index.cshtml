@* Index.cshtml - Home Page *@
@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<section class="bg-primary text-white py-5">
    <div class="container py-5">
        <div class="row align-items-center">
            <div class="col-lg-8 mx-auto text-center">
                <h1 class="display-4 fw-bold mb-4">Welcome to Code Orbit</h1>
                <p class="lead mb-4">Launch your coding journey with our expertly crafted courses and hands-on projects.</p>
                @{
                    var redirectAction = User.Identity.IsAuthenticated ? "Browse" : "Index";
                }

                <a class="btn btn-light btn-lg px-4 me-2" asp-controller="Course" asp-action="@redirectAction">Browse Courses</a>
                <a class="btn btn-outline-light btn-lg px-4" href="#features">Learn More</a>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section id="features" class="py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-5 fw-bold">Why Choose Code Orbit?</h2>
        <div class="row row-cols-1 row-cols-md-3 g-4">
            <div class="col">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body text-center">
                        <i class="bi bi-person-check display-4 text-primary mb-3"></i>
                        <h3 class="card-title text-primary">Expert Instructors</h3>
                        <p class="card-text">Learn from industry professionals with years of real-world experience.</p>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body text-center">
                        <i class="bi bi-code-slash display-4 text-primary mb-3"></i>
                        <h3 class="card-title text-primary">Practical Projects</h3>
                        <p class="card-text">Build your portfolio with hands-on coding projects and exercises.</p>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body text-center">
                        <i class="bi bi-clock display-4 text-primary mb-3"></i>
                        <h3 class="card-title text-primary">Flexible Learning</h3>
                        <p class="card-text">Study at your own pace with 24/7 access to course materials.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action Section -->
<section class="py-5">
    <div class="container text-center">
        <h2 class="fw-bold mb-4">Ready to Start Coding?</h2>
        <p class="lead mb-4">Join thousands of students who have transformed their careers with Code Orbit.</p>
        <a class="btn btn-primary btn-lg px-5" asp-controller="Course" asp-action="Index">Get Started Now</a>
    </div>
</section>

<!-- Optional: Add Bootstrap Icons if not already included -->
@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
}