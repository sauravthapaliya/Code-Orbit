@{
}
@model Code_Orbit.Models.Course

<div class="container mt-4">
    <h1 class="text-center display-4">@Model.CourseName</h1>
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImageUrl" class="img-fluid" alt="@Model.CourseName">
        </div>
        <div class="col-md-6">
            <h3>Description</h3>
            <p>@Model.Description</p>

            <h3>Language</h3>
            <p>@Model.Language</p>

            <h3>Duration</h3>
            <p>@Model.Duration</p>

            <h3>Syllabus</h3>
            <p>@Model.Syllabus</p> <!-- Display course syllabus -->

            <h3>Rating</h3>
            <p>@Model.Rating / 5</p>

            <a href="#" class="btn btn-success">Enroll Course</a> <!-- Enrollment button -->
        </div>
    </div>
</div>
